<main>
<div class="container px-5 px-sm-0">
  <div class="row">


      <%= render 'left', books: @books ,book: @book %>



      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <% @books.each do |book| %>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>



  </div>
</div>
</main>