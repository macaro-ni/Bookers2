
<div class="col-md-3">

  <h2>User info</h2>

  <!--ユーザー画像-->
  <img src="#">
  <%= f.file_field :image, accept: "image/*" %>
  <table class="table">
<!--名前と説明-->
    <tbody>
      <tr>
        <th>name</th> <td> book.user.name </td>
      </tr>
      <tr>
        <th>introduction</th> <td> book.caption </td>
      </tr>
    </tbody>
  </table>


  <!--ユーザー編集ボタンが長い…-->
  <div class="row">
    <a class="btn btn-outline-secondary btn-block edit_user_[:id]" href="/users/:id/edit">
      <i class="fas fa-user-cog"></i>
    </a>
  </div>



  <h2 class="mt-3">New book</h2>
  <%= form_with model: @book, url:'/books', method: :post do |f| %>

  <div class="form-group">
    <label for="book_title">Title</label>
    <br>
     <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <br>
    <%= f.text_area :body %>
  </div>

  <!--disable-withは必要？-->
  <div class="form-group">
    <%= f.submit 'Create Book' ,class: "btn btn-success" %>
    <% end %>
  </div>

</div>