<main>
<div class="container px-5 px-sm-0">
  <div class="row">


      <%= render 'left', book: @book,books: @books ,user: current_user %>



      <h2>Book detail</h2>
      <table class="table">
        <tbody>

          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %>
            <br>
            <%= link_to user_path(@user.id) do %>
              <%= @user.name %>
            <%end %></td>

            <td><%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %></td>

            <td><%= @book.body %></td>

            <% if @book.user == current_user %>
            <td>
                  <%= link_to edit_book_path(@book.id) do %>
                  <button type="button" class="btn btn-success">Edit</button>
                  <% end %>
                  <!--<a class="btn btn-sm btn-success edit_book_55567" href="/books/55567/edit">Edit</a>--></td>
            <td>
                  <%= link_to book_path(@book),method: :delete,"data-confirm"=>"本当に消しますか？"  do %>
                  <button type="button" class="btn btn-danger">Destroy</button>
                  <% end %>
                </td>
            <% end %>
          </tr>
        </tbody>
      </table>



  </div>
</div>
</main>