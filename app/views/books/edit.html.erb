<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
        <h1>Editing Book</h1>
        <form>
          <%= form_with model:@book do |f| %>

         <div class="form-group">
            <label for="book_title">Title</label>
            <br>
            <%= f.text_field :title, autofocus:true %>
         </div>

         <div class="form-group">
            <label for="book_body">Image</label>
            <br>
            <%= f.file_field :body %>
         </div>
          <div class="form-group">
            <%= f.submit 'Update Book' ,class: "btn btn-secondary" %>
            <!--<type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">-->
          </div>
          <% end %>
        </form>
      </div>
    </div>
  </div>


</main>